{
  "name": "themis",
  "version": "0.0.8",
  "description": "A threaded, topic-based ActivityPub implementation",
  "author": "Michael H. Potter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/momikey/themis.git"
  },
  "scripts": {
    "build": "webpack && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build:webpack": "webpack",
    "start:webpack": "webpack --watch --mode development"
  },
  "dependencies": {
    "@nestjs/common": "^5.7.4",
    "@nestjs/core": "^5.7.4",
    "@nestjs/jwt": "^0.2.1",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/typeorm": "^5.3.0",
    "bcrypt": "^5.0.0",
    "date-fns": "^1.30.1",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "http-status": "^1.3.2",
    "material-design-icons-iconfont": "^4.0.5",
    "number-format.js": "^2.0.8",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pjson": "^1.0.9",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "sqlite3": "^4.0.8",
    "store": "^2.0.12",
    "typeorm": "^0.2.17",
    "typescript": "^3.4.5",
    "uuid": "^3.3.2",
    "vue": "^2.6.10",
    "vue-router": "^3.0.6",
    "vue-warehouse": "^1.0.2",
    "vuetify": "^1.5.14"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.7.4",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^10.14.7",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/store": "^2.0.1",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "css-loader": "^1.0.1",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "sql.js": "^0.5.0",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.11.0",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.32.0",
    "webpack-cli": "^3.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
